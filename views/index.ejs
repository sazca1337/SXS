    <div class="banner">
        <div class="banner-frame">
            <img src="/images/banner-frame.png" alt="banner-frame">
            <div class="action">
                <a href="/">КУПИТЬ</a>
            </div>
        </div>
        <div class="banner-frame">
            <img src="/images/banner-frame2.png" alt="banner-frame">
